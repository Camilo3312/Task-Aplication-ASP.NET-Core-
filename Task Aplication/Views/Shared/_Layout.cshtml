@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
   @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" href="~/sass/stylesheet.min.css" />
</head>
<body>
    <header class="header_layot_app">

        <nav class="nav_header_app">

            <div class="section_header_info">
                <a class="subtitle_section_header" asp-area="" asp-controller="Home" asp-action="Index">Aplicacion de tareas</a>
                <h1 class="title_section_header">Hola</h1>         
            </div>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if(Context.User.Identity.IsAuthenticated == false) {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Ingresar</a>
                        </li>
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SingUp" asp-action="Index">Registrate</a>
                        </li>
                    }
                    else
                    {
                        <a class="btn_logout" asp-controller="Login" asp-action="LogOut">Cerrar sesión</a>
                    }
                    
                </ul>
            </div>
            
        </nav>

    </header>
    <div class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>